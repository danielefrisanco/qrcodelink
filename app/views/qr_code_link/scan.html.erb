// open this page only on chrome on Android
<%= form_tag save_ndef_message_path_url(@qr_code_link) do %>
  <%= hidden_field_tag "serial_number", id: 'serialNumber' %>
  <%= hidden_field_tag "message", id: 'message' %>
  <%= submit_tag 'Scan', id: 'scanButton' %>
<% end %>
<button type="button" name="button" id="scanButton1">Scan1</button>
<script type="text/javascript">
  // Sends the message
  var send_ndef_message = function(message, serialNumber) {
    document.ajax({
      type:'POST',
      url:"<%= save_ndef_message_path_url(@qr_code_link) %>",
      data: { message: message,
              serial_number: serialNumber
            },
      success:function() {
        // do something
      }
    });
  }
  document.getElementById('scanButton1').addEventListener("click", async () => {
    console.log("User clicked scan button");

    try {
      const ndef = new NDEFReader();
      await ndef.scan();
      console.log("> Scan started");

      ndef.addEventListener("readingerror", () => {
        console.log("Argh! Cannot read data from the NFC tag. Try another one?");
      });

      ndef.addEventListener("reading", ({ message, serialNumber }) => {
        console.log(`> Serial Number: ${serialNumber}`);
        console.log(`> Records: (${message.records.length})`);
        send_ndef_message(message, serialNumber)
      });
    } catch (error) {
      console.log("Argh! " + error);
    }
  });

</script>
